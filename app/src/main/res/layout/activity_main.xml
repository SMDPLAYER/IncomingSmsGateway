<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/listViewHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:id="@+id/holderHandlers"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="100dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/openNotificationAccess"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginHorizontal="16dp"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:text="@string/notification_access"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginHorizontal="16dp"
                    style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                    android:text="@string/notification_access_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:paddingVertical="8dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:id="@+id/info_notice"
                />
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_btn_add" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>